<%= simple_form_for @contact, :html => {:class => 'form-horizontal tr-form' } do |f| %>
  <% if flash[:error].present? %>
    <p> flash[:error]</p>
  <% end %>
<div class="row">
  <div class="col-sm-6">
    <%= f.input :name, :required => true, class:"form-control", placeholder: "Full Name"  %>
  </div>
  <div class="col-sm-6">
    <%= f.input :email, :required => true, class:"form-control", placeholder: "Email Address"  %>
  </div>
</div>

<div class="form-group">
  <%= f.input :message, :as => :text, :required => true, class:"form-control", placeholder: "Message", rows: "5" %>
</div>
<div class= "hidden">
  <%= f.input :nickname, :hint => 'Leave this field blank!' %>
</div>
<div class="form-group">
  <%= f.button :submit, 'Send message', :class=> "btn btn-primary pull-right" %>
</div>
<%end%>
