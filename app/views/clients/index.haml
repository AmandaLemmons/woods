.container-fluid
  %h3
  Welcome
  =current_manager.email
  =link_to "+ New Client", new_client_path
  =link_to "Live Clients", live_clients_path

  %row
    .btn-group.btn-group-toggle{"data-toggle" => "buttons"}
      %label.btn.btn-secondary.active
        =link_to "Live Clients", live_clients_path
      %label.btn.btn-secondary
        %input#option2{:autocomplete => "off", :name => "options", :type => "radio"}/
        Radio
      %label.btn.btn-secondary
        %input#option3{:autocomplete => "off", :name => "options", :type => "radio"}/
        Radio

  %table.table.table-striped
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Company
        %th{:scope => "col"} Contact Person
        %th{:scope => "col"} Address
        %th{:scope => "col"} Phone
        %th{:scope => "col"} Comments
        %th{:scope => "col"} Other
        %th{:scope => "col"} Status
        %th{:scope => "col"} Edit
    %tbody
    - @clients.each_with_index do |client, index|
      %tr
        %th{:scope => "row"} #{index + 1}
        %td #{client.company}
        %td #{client.contact_name}
        %td #{client.address}
        %td #{client.phone_number}
        %td #{client.comments}
        %td #{client.other}
        %td #{client.status}
        %td= link_to "Edit", edit_client_path(client)
