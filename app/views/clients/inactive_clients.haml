.container-fluid
  .row
    .col.align-self-start
      %h3
      Welcome
      =current_manager.email
  .row
    .col-md-12.text-center
      %h4 Dormant Clients


  %table.table.table-striped
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Company
        %th{:scope => "col"} Contact Person
        %th{:scope => "col"} Address
        %th{:scope => "col"} Phone
        %th{:scope => "col"} Comments
        %th{:scope => "col"} Other
        %th{:scope => "col"} Status
        %th{:scope => "col"} Edit
    %tbody
    - @clients.each_with_index do |client, index|
      %tr
        %th{:scope => "row"} #{index + 1}
        %td #{client.company}
        %td #{client.contact_name}
        %td #{client.address}
        %td #{client.phone_number}
        %td #{client.comments}
        %td #{client.other}
        %td{class: color_client_status(client.status)}
          #{client.status}
        %td= link_to "Edit", edit_client_path(client), class:"btn btn-sm btn-success"
