.container-fluid
  %ul.nav.navbar-nav
    %li
      %button.btn.btn-default.navbar-btn{:type => "button"}= link_to "All Clients", clients_path
    %li= link_to "+ New Client", new_client_path
    %button.btn.btn-primary{"data-target" => "#exampleModalCenter", "data-toggle" => "modal", :type => "button"}
      Launch demo modal
    %li=link_to "Live Clients", live_clients_path
    %li=link_to "Dormant Clients", dormant_clients_path
  %table.table.table-striped
    %thead
      %tr
        %th{:scope => "col"} #
        %th{:scope => "col"} Company
        %th{:scope => "col"} Contact Person
        %th{:scope => "col"} Address
        %th{:scope => "col"} Phone
        %th{:scope => "col"} Comments
        %th{:scope => "col"} Other
        %th{:scope => "col"} Status
        %th{:scope => "col"} Edit
    %tbody
    - @clients.each_with_index do |client, index|
      %tr
        %th{:scope => "row"} #{index + 1}
        %td #{client.company}
        %td #{client.contact_name}
        %td #{client.address}
        %td #{client.phone_number}
        %td #{client.comments}
        %td #{client.other}
        %td #{client.status}
        %td= link_to "Edit", edit_client_path(client)

/ Modal
#exampleModalCenter.modal.fade.bd-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "exampleModalCenterTitle", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered.modal-lg{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLongTitle.modal-title New Client
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = render 'form'
      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Save changes
