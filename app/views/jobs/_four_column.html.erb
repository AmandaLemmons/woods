<div class="tab-content tr-job-posted">
  <div role="tabpanel" class="tab-pane fade in active" id="four-colum">
    <div class="row">
    <% @jobs.each do |job| %>
      <div class="col-sm-6 col-md-3">
          <div class="job-item">
            <div class="item-overlay">
              <div class="job-info">
                <a href="#" class="btn btn-primary"><%= job.category.name %></a>
                <span class="tr-title">
                  <a href="job-details.html"><%= job.title %></a>
                  <span><a href="#">Dig File</a></span>
                </span>
                <ul class="tr-list job-meta">
                  <li><i class="fa fa-map-signs" aria-hidden="true"></i><%= job.location %></li>
                  <li><i class="fa fa-briefcase" aria-hidden="true"></i>Mid Level</li>
                  <li><i class="fa fa-money" aria-hidden="true"></i><%= job.salary %></li>
                </ul>
                <ul class="job-social tr-list">
                  <li><a href="#"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                  <li><a href="#"><i class="fa fa-expand" aria-hidden="true"></i></a></li>
                  <li><a href="#"><i class="fa fa-bookmark-o" aria-hidden="true"></i></a></li>
                  <li><a href="job-details.html"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></li>
                </ul>
              </div>
            </div>
            <div class="job-info">
              <div class="company-logo">
                <img src="images/job/1.png" alt="images" class="img-responsive">
              </div>
              <span class="tr-title">
                <a href="#"><%= job.title %></a>
                <span><a href="#">Dig File</a></span>
              </span>
              <ul class="tr-list job-meta">
                <li><span><i class="fa fa-map-signs" aria-hidden="true"></i></span><%= job.location %></li>
                <li><span><i class="fa fa-briefcase" aria-hidden="true"></i></span>Mid Level</li>
                <li><span><i class="fa fa-money" aria-hidden="true"></i></span>$<%= job.salary %></li>
              </ul>
              <div class="time">
                <a href="#"><span><%= job.category.name %></span></a>
                <span class="pull-right"><%= time_ago_in_words(job.updated_at) %> ago</span>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
