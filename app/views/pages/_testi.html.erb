<div class="section-title">
  <h1>Tesitmonials</h1>
</div>
<div class="tr-testimonial">
  <div class="container">
    <div class="testimonial-content">
      <div class="testimonial-slider">
        <% @testimonials.each do |testi| %>
        <div class="testimonial">
          <div class="media-left">
            <img src="images/others/testimonial.png" alt="images" class="img-responsive">
          </div>
          <div class="media-body">
            <p>‘’ <%= testi.description%> ‘’</p>
            <div class="testimonial-title">
              <h2><%= testi.name%></h2>
              <p><%= testi.position%>, <%= testi.company%></p>
            </div>
          </div>
        </div>
        <% end %>


      </div>
    </div>
  </div><!-- /.container -->
</div><!-- /.tr-testimonial -->
