- if manager_signed_in?
  =render partial: "layouts/manager_navbar"
- elsif candidate_signed_in?
  =render partial: "layouts/candidate_nav_bar"
-else
  %nav.navbar.navbar-expand-md.navbar-dark.bg-dark
    .container
      .navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2
        %ul.navbar-nav.mr-auto
          %li.nav-item.active
            %a.nav-link{:href => "/"}Home
          %li.nav-item
            %a.nav-link{:href => "/about-us"} About Us
          %li.nav-item
            %a.nav-link{:href => "/contact-us"} Contact Us
          %li.nav-item
            %a.nav-link{:href => "/job-vacancies"} Job Vacancies
      .mx-auto.order-0
        %a.navbar-brand.mx-auto{:href => "/"}
          %img.img-responsive= image_tag("woods_logo.jpg")
        %button.navbar-toggler{"data-target" => ".dual-collapse2", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-icon
      .navbar-collapse.collapse.w-100.order-3.dual-collapse2
        %ul.navbar-nav.ml-auto
          %li.nav-item.dropdown
            %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :role => "button"}
              .i.fa.fa-user
        .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
          %a.dropdown-item=link_to "Sign In", new_candidate_session_path
          %a.dropdown-item
            %nav-link#signout=link_to "Manager Area", new_candidate_session_path
