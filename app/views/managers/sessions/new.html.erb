<div class="tr-breadcrumb bg-image ">
	<div class="container">
		<div class="breadcrumb-info text-center">
			<div class="avatar mx-auto d-block"></div>
			<div class="page-title">
				<h1>Managers Log in</h1>
			</div>
		 </div>
	</div><!--/.container -->
</div><!--/.tr-breadcrumb-->
<%= devise_error_messages! %>
<div class="tr-account section-padding">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-10">
        <div class="user-account">
          <div class="account-content">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, placeholder:"Please Enter Your Email" %>
                <%= f.input :password, required: false, placeholder:"Password" %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class:"btn btn-primary" %>
              </div>
            <% end %>

            <%= render "managers/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
